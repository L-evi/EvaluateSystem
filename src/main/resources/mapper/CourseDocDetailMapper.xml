<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.evaluate.dao.CourseDocDetailDao">
    <delete id="deleteByTaskID">
        DELETE
        FROM coursedocdetail
        <where>
            <if test="param1 != null">
                taskID = #{param1}
            </if>
            <if test="param2 != null and param2 != ''">
                AND submitter = #{param2}
            </if>
        </where>
    </delete>

    <select id="selectByTaskID" resultType="com.project.evaluate.entity.CourseDocDetail"
            parameterType="java.util.Map">
        SELECT ID,
               taskID,
               docTypeID,
               docPath,
               uploadTime,
               submitter
        FROM coursedocdetail
        WHERE taskID = #{taskID}
        LIMIT #{page}, #{pageSize}
    </select>
    <select id="getAll" resultType="com.project.evaluate.entity.CourseDocDetail">
        select *
        FROM coursedocdetail
    </select>

    <insert id="insertCourseDocDetail"
            parameterType="com.project.evaluate.entity.CourseDocDetail"
            useGeneratedKeys="true"
            keyProperty="ID">
        insert into coursedocdetail (taskID, docTypeID, docPath, uploadTime, submitter)
        values (#{taskID}, #{docTypeID}, #{docPath}, #{uploadTime}, #{submitter});
    </insert>
</mapper>